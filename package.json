{
  "name": "express-typescript-service-skeleton",
  "version": "1.0.0",
  "description": "Skeleton for new typescript services based on hexagonal architecture",
  "main": "src/server.js",
  "scripts": {
    "start": "node dist/src/server.js",
    "start:dev": "tsnd --respawn src/server.ts",
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=test jest --coverage",
    "prepare": "husky install",
    "lint": "eslint --ignore-path .gitignore . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "build": "npm run build:clean && npm run build:tsc",
    "build:clean": "rimraf dist; exit 0",
    "build:tsc": "tsc -p tsconfig.prod.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlbertHernandez/express-typescript-service-skeleton.git"
  },
  "keywords": [
    "typescript",
    "express",
    "skeleton"
  ],
  "author": "alberthernandezdev@gmail.com",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.3.0"
  },
  "bugs": {
    "url": "https://github.com/AlbertHernandez/express-typescript-service-skeleton/issues"
  },
  "homepage": "https://github.com/AlbertHernandez/express-typescript-service-skeleton#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.2.5",
    "@types/mysql": "^2.15.21",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.3",
    "rimraf": "^4.0.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.(js|ts)": [
      "npm run lint:fix"
    ]
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mysql": "^2.18.1"
  },
  "directories": {
    "test": "tests"
  }
}
